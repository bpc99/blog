.btn {
  padding: 3px 15px;
  color: #000;
  background: #fff;
  border: 0;
  border-radius: 15px;
  transition: all .1s;
  font-size: $font-size-small;
  transition-property: background-color;
  the-transition();

  &:hover {
    background: #ccc;
    border-color: var(--btn-default-hover-border-color);
    color: var(--btn-default-hover-color);
  }

  + .btn {
    margin: 0 0 8px 8px;
  }

  .fa-fw {
    text-align: left;
    width: (18em / 14);
  }
}
